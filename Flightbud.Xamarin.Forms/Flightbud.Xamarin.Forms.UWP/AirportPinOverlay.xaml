<UserControl
    x:Class="Flightbud.Xamarin.Forms.UWP.AirportPinOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    FontSize="11">
    <StackPanel Orientation="Horizontal"
                Background="Gray"
                Opacity="0.8">
        <StackPanel Orientation="Vertical" Margin="10,15,10,10">
            <TextBlock FontWeight="Bold" 
                        Foreground="Black"
                        Text="{Binding SelectedAirport.Code}"/>
            <TextBlock FontWeight="Bold" 
                        Foreground="Black"
                        Text="{Binding SelectedAirport.Name}"/>
            <HyperlinkButton Content="more info" 
                             Foreground="DarkBlue"
                             Click="OnMoreInfoClick" />
        </StackPanel>
        <Image Source="ms-appx:///Assets/icon_map_airport.png" />
    </StackPanel>
</UserControl>
